# === Makefile.windows ===

CC = gcc
CFLAGS = -O0 -mavx2 -std=gnu17
INCLUDES = -Isrc
LDFLAGS = -lm -luser32 -lgdi32 -lwinmm

SRC_DIR = src
BUILD_DIR = build
TARGET = $(BUILD_DIR)/Main.exe

# -----------------------------
# Shell-Erkennung
# -----------------------------
ifeq ($(findstring cmd,$(SHELL)),cmd)
    MKDIR_CMD = if not exist "$(BUILD_DIR)" mkdir "$(BUILD_DIR)"
    CLEAN_CMD = if exist "$(BUILD_DIR)" del /Q "$(BUILD_DIR)\*" & if exist "$(TARGET)" del "$(TARGET)"
    RUN_CMD   = $(TARGET)
else
    MKDIR_CMD = mkdir -p $(BUILD_DIR)
    CLEAN_CMD = rm -f $(BUILD_DIR)/*.o $(TARGET)
    RUN_CMD   = ./$(TARGET)
endif

# -----------------------------
# Targets
# -----------------------------

$(BUILD_DIR):
	$(MKDIR_CMD)

all: $(BUILD_DIR)
	$(CC) $(CFLAGS) $(INCLUDES) $(SRC_DIR)/*.c -o $(TARGET) $(LDFLAGS)

alldebug: $(BUILD_DIR)
	$(CC) -g $(CFLAGS) $(INCLUDES) $(SRC_DIR)/*.c -o $(TARGET) $(LDFLAGS)

exe:
	$(RUN_CMD)

debug:
	gdb $(TARGET)

clean:
	$(CLEAN_CMD)

do: clean all exe
dg: clean alldebug debug

# === Makefile.windows ===